{
    "manifest_version": 2,
    "name": "Text Highlighter",
    "version": "1.0",
    "browser_action": {
      "default_title": "Highlight Text",
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage",
      "activeTab",
      "http://*/*",
      "https://*/*",
      "file:///*"
    ],
    "web_accessible_resources": [
      "dataset.txt",
      "popup.html",
      "highlighter.js"
    ]    
}
